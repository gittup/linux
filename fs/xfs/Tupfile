EXTRA_CFLAGS +=	 -I$(src) -I$(src)/linux-2.6 -funsigned-char

XFS_LINUX := linux-2.6

ifeq ($(CONFIG_XFS_DEBUG),y)
	EXTRA_CFLAGS += -g
endif

obj-$(CONFIG_XFS_FS)		+= xfs.o

xfs-$(CONFIG_XFS_QUOTA)		+= $(addprefix quota/, \
				   xfs_dquot.o \
				   xfs_dquot_item.o \
				   xfs_trans_dquot.o \
				   xfs_qm_syscalls.o \
				   xfs_qm_bhv.o \
				   xfs_qm.o)
xfs-$(CONFIG_XFS_QUOTA)		+= linux-2.6/xfs_quotaops.c

ifeq ($(CONFIG_XFS_QUOTA),y)
xfs-$(CONFIG_PROC_FS)		+= quota/xfs_qm_stats.c
endif

xfs-$(CONFIG_XFS_RT)		+= xfs_rtalloc.c
xfs-$(CONFIG_XFS_POSIX_ACL)	+= $(XFS_LINUX)/xfs_acl.o
xfs-$(CONFIG_PROC_FS)		+= $(XFS_LINUX)/xfs_stats.o
xfs-$(CONFIG_SYSCTL)		+= $(XFS_LINUX)/xfs_sysctl.o
xfs-$(CONFIG_COMPAT)		+= $(XFS_LINUX)/xfs_ioctl32.o


xfs-y				+= xfs_alloc.c \
				   xfs_alloc_btree.c \
				   xfs_attr.c \
				   xfs_attr_leaf.c \
				   xfs_bit.c \
				   xfs_bmap.c \
				   xfs_bmap_btree.c \
				   xfs_btree.c \
				   xfs_buf_item.c \
				   xfs_da_btree.c \
				   xfs_dir2.c \
				   xfs_dir2_block.c \
				   xfs_dir2_data.c \
				   xfs_dir2_leaf.c \
				   xfs_dir2_node.c \
				   xfs_dir2_sf.c \
				   xfs_error.c \
				   xfs_extfree_item.c \
				   xfs_filestream.c \
				   xfs_fsops.c \
				   xfs_ialloc.c \
				   xfs_ialloc_btree.c \
				   xfs_iget.c \
				   xfs_inode.c \
				   xfs_inode_item.c \
				   xfs_iomap.c \
				   xfs_itable.c \
				   xfs_dfrag.c \
				   xfs_log.c \
				   xfs_log_recover.c \
				   xfs_mount.c \
				   xfs_mru_cache.c \
				   xfs_rename.c \
				   xfs_trans.c \
				   xfs_trans_ail.c \
				   xfs_trans_buf.c \
				   xfs_trans_extfree.c \
				   xfs_trans_inode.c \
				   xfs_trans_item.c \
				   xfs_utils.c \
				   xfs_vnodeops.c \
				   xfs_rw.c \
				   xfs_dmops.c

xfs-$(CONFIG_XFS_TRACE)		+= xfs_btree_trace.c \
				   xfs_dir2_trace.c

# Objects in linux/
xfs-y				+= $(addprefix $(XFS_LINUX)/, \
				   kmem.o \
				   xfs_aops.o \
				   xfs_buf.o \
				   xfs_export.o \
				   xfs_file.o \
				   xfs_fs_subr.o \
				   xfs_globals.o \
				   xfs_ioctl.o \
				   xfs_iops.o \
				   xfs_lrw.o \
				   xfs_super.o \
				   xfs_sync.o \
				   xfs_xattr.o)

# Objects in support/
xfs-y				+= $(addprefix support/, \
				   debug.o \
				   uuid.o)

xfs-$(CONFIG_XFS_TRACE)		+= support/ktrace.c

include $(LINUX_ROOT)/linux2.tup
