include_rules
modname = hid
#
# Makefile for the HID driver
#
hid-y			:= hid-core.c hid-input.c


hid-@(HID_DEBUG)		+= hid-debug.c
hid-@(HIDRAW)		+= hidraw.c

hid-logitech-y		:= hid-lg.c
